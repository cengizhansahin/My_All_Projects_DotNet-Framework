@model Post
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach(var tag in Model.Tags)
                {
                <a href="" class="badge bg-@tag.Color bg-opacity-2 text-primary mb-2 fw-bold">@tag.Text</a>
                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
            <div>
                <p>@Model.Content</p>
            </div>
            <div class="bg-white">
                <div class="card border-0">
                    <div class="card-header pb-0">
                        <h4>@Model.Comments.Count() adet yorum</h4>
                    </div>
                    <div class="card-body">
                        @foreach(var comment in Model.Comments)
                        {
                            <div class="my-4 d-flex">
                                <img src="/img/@comment.User.Image" alt="" class="rounded-circle float-start me-3 avatar">
                                <div>
                                    <div class="mb-2">
                                        <h6>@comment.User.UserName</h6>
                                        <span>@comment.PublishedOn</span>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>